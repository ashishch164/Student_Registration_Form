/*this is CSS code written in a file named as style.css*/

.flipcard {
    position: relative;
    width: 20%;
    height: 400px;
    margin: 2%;
    perspective: 500px;
    display: inline-block;
    box-shadow: 2px 2px 20px black;
    border-radius: 5px; 
    background: aqua;
    background-color: bisque;
  }
  
  .main {      /*this is outer conatiner jisme boxes hote h*/
    background-color: bisque;
    /*width: 100vh;*/   /*agar ye hum nahi denge to bydefault container screen ki size lega aur uske hisaab se wrap krega*/
    display: flex; /* or inline-flex */
    height: 150vh;
    flex-wrap: wrap;    /*ye boxes ko wrap krdega acc to screen size,bydefault nowrap hota h*/
    flex-direction: row;     /* ye batata h ki kis direction me wrap honge boxes,it is bydefault */
    
 justify-content: flex-start;      /*This defines the alignment along the main axis.*/
 /* justify-content: space-around; */
 align-items: center;      
}

.flipcard {
  /* flex: 0 1 calc(25% - 1em); */
   display: flex; 
   justify-content:space-between; 
   box-sizing: border-box; 
     /* margin: 1rem .25em; */ 
    flex: 0 0 300px;
 }
  
  .flipcard.v:hover .front, .flipcard.v.flip .front{
    transform: rotateX(180deg);
  }
  .flipcard.v:hover .back, .flipcard.v.flip .back{
    transform: rotateX(0deg);
  }
  .flipcard.v .back{
    transform: rotateX(-180deg);
  }
  .flipcard.h:hover .front, .flipcard.h.flip .front{
    transform: rotateY(180deg);
  }
  .flipcard.h:hover .back, .flipcard.h.flip .back{
    transform: rotateY(0deg);
  }
  .flipcard.h .back{
    transform: rotateY(-180deg);
  }
  .flipcard .front, .flipcard .back
  {
    position:absolute;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    transition: all 0.5s ease-in;
    color: white;
    background-color: purple;
    padding: 10px;
    backface-visibility: hidden;
  }
  .image img{
    width:100px;
    height: 100px;
     /* border-top-right-radius: 5px;
     border-top-left-radius: 5px; */
     align-items: center;
     border-radius: 50%;
     padding: 0px;
     transform: translateX(80px);
    
    }
   
   .title{
    
     text-align: center;
     padding: 10px;
     
    }
   
   h1{
     font-size: 20px;
    }
   
   .des{
     padding: 3px;
     text-align: center;
    
     padding-top: 10px;
           border-bottom-right-radius: 5px;
     border-bottom-left-radius: 5px;
   }
   button{
     margin-top: 40px;
     margin-bottom: 10px;
     background-color: white;
     border: 1px solid black;
     border-radius: 5px;
     padding:10px;
   }
   button:hover{
     background-color: black;
     color: white;
     transition: .5s;
     cursor: pointer;
   }

   .back{ 
    font-size: 20px;
    text-align: center;
    border-top-right-radius: 5px;
   }


  
